<odoo>
  <data>

    <!-- explicit list view definition -->

    <record id="open_academy_groups_view_tree" model="ir.ui.view">
      <field name="name">open.academy.groups.tree</field>
      <field name="model">open_academy_groups.open_academy_groups</field>
      <field name="arch" type="xml">
        <tree string="Open Academy Groups List">
          <field name="name" string="Title"/>
          <field name="courses_id" string="Course"/>
          <field name="description" string="Description"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="open_academy_groups_view_form">
      <field name="name">open_academy_groups.open_academy_groups.form</field>
      <field name="model">open_academy_groups.open_academy_groups</field>
      <field name="arch" type="xml">
        <form string="Session">
          <sheet>
            <div class="oe_title">
              <label for= "name" class="oe_edit_only" string= "Group Title" />
              <h2>
                <field name= "name" />
              </h2>
            </div>
            <notebook>
              <page string="Information">
                <group>
                  <field name="courses_id" string="Course"/>
                  <field name="description" string="Description" />
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search views -->
    <record id="open_academy_groups_view_search" model="ir.ui.view">
      <field name="name">open.academy.groups.search</field>
      <field name="model">open_academy_groups.open_academy_groups</field>
      <field name="arch" type="xml">
        <search>
          <!-- <field name="name" string="Title"/> -->
          <field name="courses_id" string="Course"/>
          <separator/>
          <filter string="Course" name="courses_id" context="{'group_by': 'courses_id'}"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record id="open_academy_groups_action" model="ir.actions.act_window">
      <field name="name">Groups</field>
      <field name="res_model">open_academy_groups.open_academy_groups</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>